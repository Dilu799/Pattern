<section>
	<div class="container ">
		<div class="row">
			<div class="col-sm-12">
				<div class="features_items">
					<!--features_items-->
					<h2 class="title text-center">All Products</h2>
					{{#each products}}
					<div class="col-sm-3 ">
						<div class="product-image-wrapper">
							<div class="single-products">
								<div class="productinfo text-center">
									<img src="/images/products/{{this._id}}1.jpg" style="width:100px; height:auto"
										alt="Products main image" />
									<h2>{{this.Name}}</h2>
									<p>Rs.{{this.Price}}
									</p>
										{{#if this.Offer}}
										<p>{{this.Offer}}% off
											<s>Rs.{{this.ActualPrice}}</s>
										</p>
										{{/if}}	
								</div>
								<div class="product-overlay">
									<div class="overlay-content">
										<h2>{{this.Name}}</h2>
										<p>Rs.{{this.Price}}</p>
										<a href="/productdetails/{{this._id}}"
											class="btn btn-default add-to-cart"><i></i>View Details</a>
									</div>
								</div>
							</div>
							<div class="choose">
								<ul class="nav nav-pills nav-justified">
									<li><a onclick="addToWishlist('{{this._id}}')"><i class="fa fa-heart"></i></a></li>
									<li><a onclick="addToCart('{{this._id}}')"><i class="fa fa-shopping-cart"></i></a>
									</li>
								</ul>
							</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</section>
