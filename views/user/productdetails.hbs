
    <meta charset="UTF-8">
    <title>PDP iZoom - iCodefy</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="../js/Vendor/fancybox/jquery.fancybox.css" />
    <link rel="stylesheet" href="../js/Vendor/fancybox/helpers/jquery.fancybox-thumbs.css" />
    <link href="../css/zoom.css" rel="stylesheet" />
    <script src="../js/Vendor/jquery/jquery-1.8.3.min.js"></script>

    <div class="container">
        <div class="breadcrumbs">
			<ol class="breadcrumb">
				<li><a href="/">Home</a></li>
				<li class="active">Product Details</li>
			</ol>
		</div>
        <div class="row">
            <div class="pdp-image-gallery-block">
                <!-- Gallery  Thumbnail Images-->
                <div class="gallery_pdp_container">
                    <div id="gallery_pdp">
                        <a href="#" data-image="/images/products/{{product._id}}1.jpg"
                            data-zoom-image="/images/products/{{product._id}}1.jpg">
                            <img id="" style="width:50px; height:auto;" src="/images/products/{{product._id}}1.jpg" />
                        </a>
                        <a href="#" data-image="/images/products/{{product._id}}2.jpg"
                            data-zoom-image="/images/products/{{product._id}}2.jpg">
                            <img id="" style="width:50px; height:auto;" src="/images/products/{{product._id}}2.jpg" />
                        </a>
                        <a href="#" data-image="/images/products/{{product._id}}3.jpg"
                            data-zoom-image="/images/products/{{product._id}}3.jpg">
                            <img id="" style="width:50px; height:auto;" src="/images/products/{{product._id}}3.jpg" />
                        </a>
                    </div>

                </div>

                <!-- Gallery -->

                <!-- gallery Viewer medium image -->
                <div class="gallery-viewer">
                    <img id="zoom_10" src="/images/products/{{product._id}}1.jpg" data-zoom-image="/images/products/{{product._id}}1.jpg" />
                    {{!-- <p class="hint-pdp-img">Roll over the image to zoom in</p> --}}
                </div>

                <!-- gallery Viewer -->
            </div>
            <!-- Product Details Section -->
            <div class="product-details ">
                {{!-- <div class=""> --}}
                    <div class="product-information ">
                        <!--/product-information-->
                        <h2>{{product.Name}}</h2>
                        <span>
                            <span>Rs.{{product.Price}}</span>

                            <a type="button" onclick="addToCart('{{product._id}}')" class="btn btn-warning cart">
                                <i class="fa fa-shopping-cart"></i>
                                cart
                            </a>
                            <a type="button" onclick="addToWishlist('{{product._id}}')" class="btn btn-warning cart">
                                <i class="fa fa-heart"></i>
                                wishlist
                            </a>
                        </span><br>
                        <span>
                            {{#if product.Offer}}
                            <span style="color: green;">{{product.Offer}}% OFF</span>
                            <s style="font-size: 25px;">Rs.{{product.ActualPrice}}</s>
                            {{/if}}
                        </span>
                        <p><b>Availability:</b>Available
                        </p>
                        <p><b>Description:</b>{{product.Description}}</p>
                    </div>
                    <!--/product-information-->
                {{!-- </div> --}}
            </div>
        </div>

        <div class="recommended_items mt-5">
            <!--recommended_items-->
            <h2 class="title text-center">Related items</h2>
            {{#each catproducts}}
            <div class="col-sm-3 ">
                <div class="product-image-wrapper" style="height: 250px; width: 250px;">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="/images/products/{{this._id}}1.jpg" style="width:100px; height:auto"
                                alt="Products main image" />
                            <h2>{{this.Name}}</h2>
                            <p>Rs.{{this.Price}}
                            </p>
                            {{#if this.Offer}}
                            <p>{{this.Offer}}% off
                                <s>Rs.{{this.ActualPrice}}</s>
                            </p>
                            {{/if}}
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <h2>{{this.Name}}</h2>
                                <p>Rs.{{this.Price}}</p>
                                <a href="/productdetails/{{this._id}}" class="btn btn-default add-to-cart"><i></i>View
                                    Details</a>
                            </div>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a onclick="addToWishlist('{{this._id}}')"><i class="fa fa-heart"></i></a></li>
                            <li><a onclick="addToCart('{{this._id}}')"><i class="fa fa-shopping-cart"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
<script src="../js/addTo.js"></script>

<script src="../js/Vendor/jquery/jquery-ui.min.js"></script>
<script src="../js/Vendor/fancybox/jquery.fancybox.js"></script>
<script src="../js/Vendor/elevatezoom/jquery.elevatezoom.js"></script>
<script src="../js/Vendor/panZoom/panZoom.js"></script>
<script src="../js/Vendor/ui-carousel/ui-carousel.js"></script>

<script src="../js/zoom.js"></script>
